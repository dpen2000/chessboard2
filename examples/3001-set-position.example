===== id
3001

===== Name
Set Position

===== Description
Use the <a href="docs.html#methods:start"><code class="js plain">start</code></a> and <a href="docs.html#methods:position"><code class="js plain">position</code></a> methods to set the board position.

===== HTML
<div id="myBoard" style="width: 400px"></div>
<button id="setStartBtn">Start Position</button>
<button id="setRuyLopezBtn">Ruy Lopez</button>
<button id="setRookCheckmateBtn">Rook Checkmate</button>

<button id="setPawns1">Pawns 1</button>
<button id="setPawns2">Pawns 2</button>

===== JS
var board = Chessboard2('myBoard')

$('#setStartBtn').on('click', board.start)

$('#setRuyLopezBtn').on('click', function () {
  board.position('r1bqkbnr/pppp1ppp/2n5/1B2p3/4P3/5N2/PPPP1PPP/RNBQK2R')
})

$('#setRookCheckmateBtn').on('click', function () {
  board.position({
    a4: 'bK',
    c4: 'wK',
    a7: 'wR'
  })
})

$('#setPawns1').on('click', function () {
  board.position({
    c4: 'wP',
    d4: 'wP',
    e4: 'wP',

    c5: 'bP',
    d5: 'bP',
    e5: 'bP'
  })
})

$('#setPawns2').on('click', function () {
  board.position({
    c4: 'bP',
    d4: 'bP',
    e4: 'bP'
  })
})
